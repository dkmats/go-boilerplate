// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-outside-of-docker
{
  "name": "Go, aqua, dev container",
  "image": "mcr.microsoft.com/devcontainers/base:bookworm",
  "customizations": {
    "vscode": {
      "extensions": [
        "editorconfig.editorconfig",
        "ms-azuretools.vscode-containers",
        "redhat.vscode-yaml",
        "golang.go",
        "DavidAnson.vscode-markdownlint"
      ],
      "settings": {
        "files.insertFinalNewline": true,
        // Automate gopls installation
        "go.toolsManagement.autoUpdate": true,
        "go.toolsManagement.checkForUpdates": "proxy",
        // golangci-lint
        "go.lintTool": "golangci-lint",
        "go.lintFlags": [
          "--path-mode=abs",
          "--fast-only"
        ],
        // If the linting is too heavy, you might want to use "file"
        "go.lintOnSave": "package",
        "go.formatTool": "custom",
        "go.alternateTools": {
          "customFormatter": "golangci-lint"
        },
        "go.formatFlags": [
          "fmt",
          "--stdin"
        ]
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1.6.5": {
      "version": "latest",
      "enableNonRootDocker": "true",
      "moby": "true"
    },
    "ghcr.io/aquaproj/devcontainer-features/aqua-installer:0.1.6": {
      "aqua_version": "v2.55.1"
    }
  },
  "remoteEnv": {
    // Add packages managed by aqua
    "PATH": "/home/vscode/.local/share/aquaproj-aqua/bin:${containerEnv:PATH}",
    // Docker settings
    "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
  },
  // Lazy install packages managed by aqua
  "postStartCommand": "aqua i -l"
}
